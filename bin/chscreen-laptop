#!/bin/sh
case "$1"
    in
    right)
        # external to right
        xrandr --output eDP-1 --auto --output DP-1 --auto --right-of eDP-1
        ;;
    left)
        # external to left
        xrandr --output eDP-1 --auto --output DP-1 --auto --left-of eDP-1
        ;;
    top)
        # external above
        xrandr --output eDP-1 --auto --output DP-1 --auto --above eDP-1
        ;;
    off)
        # external off
        xrandr --output eDP-1 --auto --output DP-1 --off
        ;;
esac
# xrandr --output DP-1 --mode 2048x1152
