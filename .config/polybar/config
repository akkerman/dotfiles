[colors]
; iceberg
danger = #90cc6666
warn = #90f0c674
success = #90b5bd68
background = #00000000
background_focused = #90373b41
background_visible = #40373b41
background_danger = #90a54242
background_warn = #90de935f
background_success = #908c9440
underline_default = #9081a2be
underline_visible = #2081a2be
underline_danger = ${colors.danger}
underline_warn = ${colors.warn}
underline_success = ${colors.success}

foreground = #c6c8d0
foreground-alt = #9081a2be

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/base]
monitor = ${env:MONITOR}
; bottom = true
width = 100%

offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = #00f

line-size = 3

border-size = 0

padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=10
font-1 = FontAwesome:size=10
font-2 = unifont:fontformat=truetype:size=6:heavy;-2
font-3 = siji:pixelsize=12
font-4 = Source Code Pro:size=10

[bar/secondary]
inherit = bar/base
modules-right = i3

[bar/primary]
inherit = bar/base
modules-left = i3
modules-center=spotify
modules-right = backlight-acpi volume wlan apt-updates battery date

tray-position = right
tray-padding = 9

[bar/performance]
inherit = bar/base
modules-center = filesystem memory cpu temperature temperature-cpu battery apt-updates


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /stronghold
mount-2 = /opt2

label-mounted = %{F#9081a2be}%mountpoint%%{F-}: %percentage_used%%

; label-unmounted = %mountpoint%: not mounted
label-unmounted =
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-margin = 2
index-sort = true
wrapping-scroll = false

pin-workspaces = true

label-focused = %name%
label-focused-underline = ${colors.underline_default}
label-focused-background = ${colors.background_focused}
label-focused-padding = 2
label-focused-margin = 1

label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-underline = #00000000
label-unfocused-margin = 1

label-urgent = %name%
label-urgent-background = ${colors.background_danger}
label-urgent-underline = ${colors.underline_danger}
label-urgent-padding = 2
label-urgent-margin = 1

label-visible = %name%
label-visible-underline = ${colors.underline_visible}
label-visible-background = ${colors.background_visible}
label-visible-padding = 2
label-visible-margin = 1

[module/mpd]
type = internal/mpd

format-online = <label-song>  <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>

label-song-maxlen = 25
label-song-ellipsis = true

icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.primary}
toggle-off-foreground = #66

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = 

bar-width = 10
bar-indicator = │
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #789fe1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline_default}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline_default}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.underline_success}
format-disconnected-underline = ${colors.underline_danger}

label-connected = %essid% %local_ip%
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-0-foreground = ${colors.warn}
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #0a6cf5

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
time-format = %H:%M
type = internal/battery
battery = BAT0
adapter = ADP1

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.underline_success}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.underline_warn}
label-discharging = %percentage%% (%time%)

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.underline_success}

ramp-capacity-0 = 
ramp-capacity-0-foreground = #cc6666
ramp-capacity-1 = 
ramp-capacity-1-foreground  = #90de935f
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; animation-charging-0 = 
; animation-charging-1 = 
; animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.underline_default}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.underline_warn}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.underline_warn}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/temperature-cpu]
type = internal/temperature
thermal-zone = 5
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.underline_default}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.underline_warn}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.underline_warn}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/spotify]
type=custom/script
exec = ~/.config/polybar/spotify.sh %artist% - %album% - %title%
label = %{F#1db954}%{F-} %output%
tail = true
interval = 2

[module/apt-updates]
type = custom/script
exec = ~/.config/polybar/module_apt.py
interval = 600

format-prefix = " "
format-prefix-foreground = ${colors.danger}
format-underline = ${colors.underline_danger}
