# bindsym $mod+Shift+d exec rofi -show run -lines 5 -eh 2 -width 100 -padding 370 -opacity "85" -bw 0  -fg "#fdf6e3" -bc "#002b36" -bg "#002b36" -hlbg "#859900" -hlfg "#ffffff" -font "System San Francisco Display 18"
